<page-meta background-color="{{$.themeValue == '明亮'?'#F5F6F7':'#010101'}}"  scroll-duration="1000"  bindresize="pageResize" bindscrolldone="pageScrollDone" page-style="{{$.themeValue == '明亮'?'background:#F5F6F7':'background:#010101'}}">
	<navigation-bar color-animation-duration="2000" color-animation-timing-func="easeIn" />
</page-meta>
<sc-capsule isBack="{{true}}" themeValue="{{$.themeValue}}" contentText=""></sc-capsule>

<view style="padding-top: {{CustomBar}}px;">
	<view class="{{$.themeValue == '明亮'?'solid-bottom-light':'solid-bottom-dark'}}" wx:for="{{hourlyWeather}}" wx:key="index" wx:if="{{item&&index<16}}">
		<sc-cell right-icon="iconfont icon-cloudqueue" themeValue="{{$.themeValue}}">
			<text slot="subheader1">{{item.time}}</text>
			<text slot="subheader">体感温度: {{item.temp}}</text>
			<text slot="subbottom">{{item.weather}}·{{item.wind}}</text>
			<view class="left-image" slot="iconimageleft">
				<view class="flex align-center justify-center weatherIcon">
					<image class="flex align-center justify-center weatherIconCircle" mode="aspectFit" src="{{item.iconPath}}{{$.themeValue == '明亮'?'-light':''}}.svg"></image>
				</view>
			</view>
		</sc-cell>
	</view>
</view>