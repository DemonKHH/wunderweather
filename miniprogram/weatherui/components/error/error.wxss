.error {
    text-align: center;
    position: absolute;
    top: 50%;
    width: 100%;
    margin-top: -75px;
    z-index: 1;
    color: var(--normal-text-color);
}

.error .-icon {
    font-size: 56px;
    margin-bottom: 15px;
}

.error .-title {
    font-size: 14px;
    margin-bottom: 15px;
}

.error .-btn {
    -webkit-font-smoothing: subpixel-antialiased!important;
    overflow-x: hidden;
    width: 280px;
    position: relative;
    margin: 0px auto 10px auto;
    text-align: center;
    height: 50px;
    line-height: 50px;
    border-radius: 40px;
    background: var(--module-bg-color);
}